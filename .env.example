# Machinery Diagnostics MCP Server - Environment Configuration

# Data directory (default: ./data/signals)
DATA_DIR=./data/signals

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Default sampling rate for signals (Hz)
DEFAULT_SAMPLING_RATE=10000

# FFT configuration
FFT_MAX_SAMPLES=100000  # Limit for large signals

# Envelope analysis defaults
ENVELOPE_FILTER_LOW=500
ENVELOPE_FILTER_HIGH=5000
ENVELOPE_FILTER_ORDER=4

# Statistical analysis
STATISTICS_WINDOW_SIZE=1024  # For windowed statistics (future feature)

# Server configuration
SERVER_NAME=Predictive Maintenance
SERVER_VERSION=0.2.0
